using System;

class MainClass {
  public static void Main (string[] args) {
    double altura, baser, area, perimetro, diagonal;
    Console.WriteLine ("Digite a altura e a base do retângulo");
    altura = double.Parse(Console.ReadLine());
    baser = double.Parse(Console.ReadLine());
    area = baser*altura;
    perimetro = baser*2 + altura*2;
    diagonal = Math.Sqrt( Math.Pow(baser,2)+Math.Pow(altura,2));
    Console.WriteLine($"Área = {area:0.00} - Perímetro = {perimetro:0.00} - Diagonal = {diagonal:0.00}");
    

  }
}
